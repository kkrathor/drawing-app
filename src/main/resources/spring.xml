<?xml version="1.0" encoding="UTF-8"?>
<!--<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN""http://www.springframework.org/dtd/spring-beans-2.0.dtd">-->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="triangle" class = "main.java.Triangle" name="triangle-name">
        <property name="points" >
            <list>
                <ref bean="zeroPoint"/>
                <ref bean="pointB"/>
                <ref bean="pointC"/>
            </list>
        </property>

        <!--<property name = "pointA" ref="zeroPoint" />-->
        <!--<property name = "pointB" ref ="pointB"/>-->
        <!--<property name = "pointC" ref ="pointC"/>-->
    </bean>

    <bean  id ="zeroPoint" class="main.java.Point">
        <property name = "x" value = "0"></property>
        <property name="y" value="0"></property>
    </bean>

    <bean id = "pointB" class="main.java.Point">
        <property name = "x" value = "-1"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id = "pointC" class="main.java.Point">
        <property name = "x" value = "1"></property>
        <property name="y" value="0"></property>
    </bean>

    <alias name="triangle" alias="triangle-alias"/>

</beans>
